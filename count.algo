ALGORITHM count
VAR
   str : string
   NB_c,NB_v: INTEGER:=0
   NB_w :INTEGER:=1
   i : INTEGER:=0
BEGIN
    Write("Enter a sentence that end with a point")
    read(str)
    WHILE (str <> "." ) DO
         NB_c=NB_c+ 1

       IF (str(i)=" ") THEN
        NB_w=NB_w+1
        END_IF    
        IF (str(i)="a","e","i","y","o") THEN
        NB_v=NB_v+1
        END_IF
        i++
    END_WHILE
    write(NB_c)
    write(NB_w)
    write(NB_v)
END